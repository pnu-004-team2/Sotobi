<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="center">
    // line
    <View
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="#4472C0"/>
    // head
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/login_image"/>
    </LinearLayout>
    // line
    <View
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="#4472C0"/>
    // body
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        // 오토바이 등록
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="오토바이 등록"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#4472C0"/>
        // 오토바이 제조사
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오토바이 제조사"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <Spinner
                android:id="@+id/vehicle_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="10"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/input_layout"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        </LinearLayout>
        // 오토바이 모델
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오토바이 모델"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <Spinner
                android:id="@+id/vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="10"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@drawable/input_layout"
                android:layout_weight="1"
                android:layout_gravity="center"/>
        </LinearLayout>
        // 오토바이 번호
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오토바이 번호"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/vehicle_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLength="10"
                android:gravity="center"
                android:background="@drawable/input_layout"
                android:layout_weight="1"/>
        </LinearLayout>
        // line
        <View
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="#4472C0"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            // 등록 버튼
            <Button
                android:id="@+id/vehicle_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="등록"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/button_layout"
                android:layout_marginLeft="70sp"
                android:layout_marginRight="10sp"/>
            // 취소 버튼
            <Button
                android:id="@+id/vehicle_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="취소"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@drawable/button_layout"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="70sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
