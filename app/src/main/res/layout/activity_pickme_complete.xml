<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">
    // line
    <View
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="#4472C0"/>
    // head
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/login_image"/>
    </LinearLayout>
    // line
    <View
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="#4472C0"/>
    // body
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        // 지원자 대기 중
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="지원자 대기 중"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#4472C0"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>
        // 승차 신청 내용
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5sp"
            android:text="승차 신청 내용"/>
        // 목적지 입력
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="목적지"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.5"/>
            <EditText
                android:id="@+id/pickme_Dest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="10"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textNoSuggestions"
                android:background="@drawable/input_layout"
                android:focusable="false"
                android:clickable="false"/>
        </LinearLayout>
        // 사용 포인트
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용 포인트"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.5"/>
            <EditText
                android:id="@+id/pickme_Give_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="10"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textNoSuggestions"
                android:background="@drawable/input_layout"
                android:focusable="false"
                android:clickable="false"/>
        </LinearLayout>
        // 잔여 포인트
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="잔여 포인트"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.5"/>
            <EditText
                android:id="@+id/pickme_Left_Point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="10"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textNoSuggestions"
                android:background="@drawable/input_layout"
                android:focusable="false"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>
    // tail
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp">
        // 취소 버튼
        <Button
            android:id="@+id/pickme_cancel_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소하기"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/button_layout"/>
    </LinearLayout>
</LinearLayout>
