<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">
    // line
    <View
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="#4472C0"/>

    // head
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="2"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/login_image"/>
        <ImageView
            android:id="@+id/my_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:padding="7dp"
            android:src="@drawable/userinfo"/>
    </LinearLayout>
    // line
    <View
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="#4472C0"/>
    // body
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">
        // rent button
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/gotorent"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/rent_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="RENT"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#000000"/>
        </LinearLayout>
        // pick me button
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/gotopickme"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/pickme_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="PICK ME"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#000000"/>
        </LinearLayout>
        // pick up button
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/gotopickup"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/pickup_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="PICK UP"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>