<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF">
        // line
        <View
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="#4472C0"/>
        // head
        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/my_history"
                android:layout_width="95dp"
                android:layout_height="60dp"
                android:layout_x="0dp"
                android:padding="7dp"
                android:src="@drawable/userinfo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="MY INFO"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#000000"
                />
            // 잔여 포인트
            <TextView
                android:id="@+id/myinfo_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="right|bottom"
                android:textSize="30sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#4472C0"
                android:layout_margin="7sp"/>
        </AbsoluteLayout>
        // line
        <View
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="#4472C0"
            android:layout_marginBottom="10sp"/>
        // body
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            // 아이디
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="2.5"/>
                <TextView
                    android:id="@+id/myinfo_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
            </LinearLayout>
            // 이름
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="2.5"/>
                <TextView
                    android:id="@+id/myinfo_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
            </LinearLayout>
            // 휴대폰 번호
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="휴대폰"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="2.5"/>
                <TextView
                    android:id="@+id/myinfo_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
            </LinearLayout>
            // 이메일
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="2.5"/>
                <TextView
                    android:id="@+id/myinfo_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
            </LinearLayout>
            // 비밀번호 확인
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="1.38"/>
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/myinfo_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이전 비밀번호"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:maxLength="10"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
                // 비밀번호 확인 버튼
                <Button
                    android:id="@+id/myinfo_checkPass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="확인"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/button_layout_thin"/>
            </LinearLayout>
            // 비밀번호 변경
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="1.38"/>
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/myinfo_newPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="새 비밀번호"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:maxLength="10"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
                // 비밀번호 변경 버튼
                <Button
                    android:id="@+id/myinfo_changePass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="변경"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/button_layout_thin"/>
            </LinearLayout>
            // line
            <View
                android:layout_width="match_parent"
                android:layout_height="6sp"
                android:background="#4472C0"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"/>
            // 오토바이 제조사
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오토바이 제조사"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/myinfo_motorcompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="미 등록"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
            </LinearLayout>
            // 오토바이 모델
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오토바이 모델"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/myinfo_motormodel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="미 등록"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
            </LinearLayout>
            // 오토바이 번호
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오토바이 번호"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="5sp"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/myinfo_motornumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="미 등록"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="@drawable/input_layout"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        // line
        <View
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="#4472C0"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"/>
        // tail
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            // 오토바이 등록 버튼
            <Button
                android:id="@+id/myinfo_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="오토바이 등록"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@drawable/button_layout"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"/>
            // 뒤로가기 버튼
            <Button
                android:id="@+id/myinfo_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="뒤로가기"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@drawable/button_layout"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>