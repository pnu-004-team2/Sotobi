<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">
    // line
    <View
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="#4472C0"/>
    // head
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/login_image"/>
    </LinearLayout>
    // line
    <View
        android:layout_width="match_parent"
        android:layout_height="6sp"
        android:background="#4472C0"/>
    // body
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        // 대여 신청 문구
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="대여 신청"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#4472C0"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>
        // 정보 입력 문구
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="5sp"
            android:text="정보 입력"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="대여 시간"
                android:layout_weight="0.7"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="5sp"/>
            <Spinner
                android:id="@+id/rent_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:textSize="20sp"
                android:textStyle="bold"></Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="시"
                android:layout_weight="1.1"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/rent_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:textSize="20sp"
                android:textStyle="bold"></Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="분"
                android:layout_weight="1.1"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
        // 잔여 포인트
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="잔여 포인트"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.4"/>
            <EditText
                android:id="@+id/Left_Point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="10"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textNoSuggestions"
                android:background="@drawable/input_layout"
                android:focusable="false"
                android:clickable="false"/>
        </LinearLayout>
        // 사용 포인트
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="사용 포인트"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.4"/>
            <EditText
                android:id="@+id/Rent_Point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="10"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textNoSuggestions"
                android:background="@drawable/input_layout"
                android:focusable="false"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>
    // tail
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp">
        // 렌트 버튼
        <Button
            android:id="@+id/agreerentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="렌트"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/button_layout"/>
        // 취소 버튼
        <Button
            android:id="@+id/returntorentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/button_layout"/>
    </LinearLayout>
</LinearLayout>
