<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="#4472C0"/>
        // head
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/login_image"/>
        </LinearLayout>
        // line
        <View
            android:layout_width="match_parent"
            android:layout_height="6sp"
            android:background="#4472C0"/>
    </LinearLayout>
    // line

    // body
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">
        // 매칭 완료 문구
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="매칭 완료"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#4472C0"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"/>
        // 이용 정보
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="이용 정보"/>
        // 잔여 포인트
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="잔여 포인트"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.5"/>
            <EditText
                android:id="@+id/matching_Left_Point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLength="10"
                android:layout_weight="1.3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textNoSuggestions"
                android:background="@drawable/input_layout"
                android:focusable="false"
                android:clickable="false"
                android:textColor="#000000"/>
        </LinearLayout>
        // 고장 및 기타 문의
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="고장 및 기타 문의"/>
        // tail
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            // 완료 버튼
            <EditText
                android:id="@+id/matching_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="left"
                android:padding="10dp"
                android:hint="이용에 불편하신 사항 입력바랍니다."
                android:textSize="20sp"
                android:textStyle="bold"
                android:inputType="textMultiLine"
                android:background="@drawable/input_layout"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/matching_DoneBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="120dp"
                android:layout_weight="1"
                android:text="완료"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/button_layout"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
